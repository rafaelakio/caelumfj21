<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/WEB-INF/erros/erro.html</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/erros/404.html</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/WEB-INF/erros/405.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/erros/erro.html</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>bemvindo-oficial.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>servletOlaMundo</servlet-name>
    <servlet-class>
    		br.com.caelum.servlet.OlaMundo
    	</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servletOlaMundo</servlet-name>
    <url-pattern>/ola</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>FiltroConexao</filter-name>
    <filter-class>br.com.caelum.filtro.FiltroConexao</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroConexao</filter-name>
    <url-pattern>/mvc</url-pattern>
  </filter-mapping>
</web-app>